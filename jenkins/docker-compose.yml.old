services:
  minio:
    image: quay.io/minio/minio:RELEASE.2025-04-22T22-12-26Z # Ou a versão que você estava usando
    restart: always
    command:
      - server
      - /data
      - --console-address
      - ":9001"
    ports:
      - "9000:9000"
      - "9001:9001"
    networks:
      docker:
        aliases:
          - minio
    volumes:
      - minio_data:/data
    environment:
      - MINIO_ROOT_USER=root
      - MINIO_ROOT_PASSWORD=rootroot
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3

  mc_setup:
    image: quay.io/minio/mc:RELEASE.2025-03-12T17-29-24Z # Ou a imagem mc mais recente/compatível
    depends_on:
      minio:
        condition: service_healthy
    networks:
      docker: null
    volumes:
      - ./minio/mc_setup.sh:/mc_setup.sh:ro
    entrypoint: ["/bin/sh", "/mc_setup.sh"]

volumes:
  minio_data:

networks:
  docker: